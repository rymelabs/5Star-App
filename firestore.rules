rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;

      // Per-user fixture watchlist
      match /watchlist/{fixtureId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // User Settings collection - Each user can only read/write their own settings
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Teams collection
    // Admins can manage team data including:
    // - Basic info (name, logo, etc.)
    // - Players array (with jerseyNumber, position, isCaptain, isGoalkeeper)
    match /teams/{teamId} {
      allow read: if true; // Public read access
      
      // Admins can create and delete teams
      allow create, delete: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
      
      // Admins can update everything
      allow update: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
      
      // Authenticated users can update only followers, followerCount, and updatedAt
      allow update: if request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followers', 'followerCount', 'updatedAt']);
    }
    
    // Fixtures collection
    // Admins can manage fixture data including:
    // - Basic info (teams, scores, dates, etc.)
    // - Lineups (homeLineup, awayLineup arrays - max 11 players each)
    // - Events (goals, cards with player details, minutes, assists)
    match /fixtures/{fixtureId} {
      allow read: if true; // Public read access
      // Admins can create/delete
      allow create, delete: if request.auth != null &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
      // Updates:
      // - Admins can update anything (including lineups and events)
      // - Authenticated users can update only likes/likedBy/updatedAt (for liking fixtures)
      allow update: if request.auth != null && (
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin') ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedBy', 'updatedAt'])
      );
    }
    
    // Articles collection
    match /articles/{articleId} {
      allow read: if true; // Public read access
      allow create, delete: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
      allow update: if (
        request.auth != null && (
          // Admins can update everything
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin') ||
          // Authenticated users can update likes/likedBy/views (e.g., likes)
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedBy', 'views', 'updatedAt'])
        )
      ) || (
        // Allow unauthenticated guests to increment the views field only
        request.auth == null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']) &&
        (
          (resource.data.views == null && request.resource.data.views == 1) ||
          (resource.data.views != null && request.resource.data.views == resource.data.views + 1)
        )
      );
    }
    
    // Comments collection
    match /comments/{commentId} {
      allow read: if true; // Public read access
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin'));
    }
    
    // League table collection
    match /leagueTable/{teamId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }
    
    // League settings collection
    match /leagueSettings/{settingId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }
    
    // Leagues collection
    match /leagues/{leagueId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }
    
    // Competitions collection
    match /competitions/{competitionId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }
    
    // Admin Activity collection
    match /adminActivity/{activityId} {
      allow read: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }
    
    // Seasons/Tournaments collection
    match /seasons/{seasonId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }
    
    // Settings collection (Instagram, etc.)
    match /settings/{settingId} {
      allow read: if true; // Public read access for enabled features
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }
    
    // FCM Tokens collection - Users can manage their own tokens
    match /fcmTokens/{tokenId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Admins can clean up tokens
      allow delete: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }
    
    // Notifications collection - Users can manage their own notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Admins can create notifications for any user
      allow create: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }

    // Push test documents - users can create a test request for themselves
    match /pushTests/{testId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // No updates/deletes from clients
    }
    
    // Admin Notifications collection - Public read, admin write, users can update view/dismiss counts
    match /adminNotifications/{notificationId} {
      allow read: if true; // All users can read admin notifications
      allow create, delete: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
      // Allow admins full update access
      allow update: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
      // Allow authenticated users to increment viewCount and dismissCount only
      allow update: if request.auth != null && 
        request.resource.data.title == resource.data.title &&
        request.resource.data.message == resource.data.message &&
        request.resource.data.type == resource.data.type &&
        request.resource.data.priority == resource.data.priority &&
        request.resource.data.active == resource.data.active;
    }

    // Public team submissions - allow anonymous creates but enforce email+phone and one submission per email
    match /teamSubmissions/{submissionId} {
      allow read, update, delete: if request.auth != null &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');

      // Allow create only for authenticated users and validate payload
      // Client no longer needs to supply email/phone; we use the authenticated user's email for the doc id
      allow create: if request.auth != null
        // name required
        && request.resource.data.name is string
        // status must be 'pending'
        && request.resource.data.status == 'pending'
        // the submission must include the submitting user's uid
        && request.resource.data.userId == request.auth.uid
        // prevent client from setting admin-only fields
        && !(request.resource.data.keys().hasAny(['approvedAt','approvedBy','rejectedAt','rejectedReason','updatedAt','createdAt']))
  // document id must equal the authenticated user's uid (one submission per user)
  && submissionId == request.auth.uid
        // only allow creation if the document does not already exist (prevents overwrite)
        && !exists(/databases/$(database)/documents/teamSubmissions/$(submissionId));
    }

    // Email -> UID mapping to prevent duplicate submissions across different accounts
    match /submissionEmails/{emailKey} {
      // Admins can read/delete
      allow read, delete: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');

      // Allow create only if authenticated and the mapping points to the creating user and the doc does not exist
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && !exists(/databases/$(database)/documents/submissionEmails/$(emailKey));
    }

    // Analytics collection (aggregated daily metrics)
    match /analytics/{document=**} {
      allow read: if request.auth != null &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }

    // Recycle Bin collection - Admins can manage their own deleted items
    match /recycleBin/{itemId} {
      // Admins can read their own items, super-admins can read all
      allow read: if request.auth != null && 
        ((get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' && 
          resource.data.ownerId == request.auth.uid) ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
      
      // Admins can create items (soft delete) - must set ownerId to their own uid
      allow create: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin') &&
        request.resource.data.ownerId == request.auth.uid;
      
      // Admins can delete their own items, super-admins can delete any
      allow delete: if request.auth != null && 
        ((get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' && 
          resource.data.ownerId == request.auth.uid) ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin');
    }
  }
}